table
  tr
    th= User.human_attribute_name(:id)
    th= User.human_attribute_name(:name)
    th ユーザーID
    th 登録日

  tbody
  - @users.each do |user|
    tr
      td= user.id
      - if user.name.length > 15
        td= "#{user.name.slice(0,15)}..."
      - else
        td= user.name
      - if than_admin
        td= link_to "@#{user.user_id}", "/manage_users/#{user.user_id}"
      - else
        td= "@#{user.user_id}"
      td= user.created_at.strftime("%Y/%m/%d")
