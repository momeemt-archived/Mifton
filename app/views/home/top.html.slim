    =link_to  "プライバシーポリシー", "/policy"
    =link_to  "フィードバック","https://goo.gl/forms/8SbyOaNe5GYrUsh33",:target => "_blank"
    =link_to  "API", "/api"
    =link_to  "ソースコード", "https://github.com/aq17/Mifton"

