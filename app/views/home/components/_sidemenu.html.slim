    = render "components/menulist", u: users_edit_url, f:"cog", d: "プロフィールを編集"
  = render "components/menulist", u: bector_index_url, f:"users", d: "Bector"
  = render "components/menulist", u: terms_url, f:"align-left", d: "利用規約"
  = render "components/menulist", u: policy_url, f:"user-secret", d: "プライバシーポリシー"
  = render "components/menulist", u: authority_url, f:"star", d: "権限ユーザー"
